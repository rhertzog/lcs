#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=4

build: build-stamp
build-stamp:
	dh_testdir
	
	cp /usr/share/misc/config.guess cfgaux
	cp /usr/share/misc/config.sub cfgaux

	./configure --prefix=/usr \
		--mandir=\$${prefix}/share/man \
		--infodir=\$${prefix}/share/info \
		--enable-htmldir=/usr/share/sarg \
		--enable-bindir=/usr/bin \
		--enable-sysconfdir=/etc/squid \
		--enable-mandir=/usr/share/man/man1

	# Add here commands to compile the package.
	make

	touch build-stamp

clean:
	dh_testdir
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	make install DESTDIR=`pwd`/debian/lcs-sarg
	cp debian/sarg.* debian/lcs-sarg/etc/squid
	mv debian/lcs-sarg/etc/squid/exclude_codes debian/lcs-sarg/etc/squid/sarg.exclude_codes
	mv debian/lcs-sarg/etc/squid/fonts/license debian/lcs-sarg/usr/share/doc/sarg/font.copyright
	mv debian/lcs-sarg/etc/squid/fonts/README debian/lcs-sarg/usr/share/doc/sarg/README.font
	cp debian/sarg-reports debian/lcs-sarg/usr/sbin/sarg-reports
	cp debian/sarg-reports.conf debian/lcs-sarg/etc/squid
	cp debian/sarg-reports.cron.daily debian/lcs-sarg/etc/cron.daily/sarg
	cp debian/sarg-reports.cron.weekly debian/lcs-sarg/etc/cron.weekly/sarg
	cp debian/sarg-reports.cron.monthly debian/lcs-sarg/etc/cron.monthly/sarg
	cp css.tpl debian/lcs-sarg/usr/share/doc/sarg

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
#	dh_testversion
	dh_testdir
	dh_testroot
	#dh_installdebconf	
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	#dh_undocumented
	dh_installchangelogs ChangeLog
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	chmod 644 debian/lcs-sarg/etc/squid/sarg.*
	chmod 644 debian/lcs-sarg/etc/squid/languages/*
	chmod 755 debian/lcs-sarg/etc/squid
	chmod 755 debian/lcs-sarg/usr/sbin/sarg-reports
	chmod 755 debian/lcs-sarg/etc/cron.daily/sarg
	chmod 755 debian/lcs-sarg/etc/cron.weekly/sarg
	chmod 755 debian/lcs-sarg/etc/cron.monthly/sarg
	dh_makeshlibs
	dh_installdeb
	#dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
