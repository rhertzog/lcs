#!/bin/sh
# prerm script
#
# see: dh_installdeb(1)

set -e

MODULE="Bcdiweb"
module=`echo $MODULE | tr [:upper:] [:lower:]`
PATHPLUG="/usr/share/lcs/Plugins/$MODULE"
# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    purge|remove)
 
CHEMIN=`pwd`   
    
        #
        # Desinscription du module de la table lcs_db.applis
        #
        mysql -e "DELETE FROM lcs_db.applis WHERE name = '$MODULE' OR name='$module';";
        #
        
        #
        # Execution du script de desinstallation
        #
        if [ -e $PATHPLUG/Admin/desinstall ]; then
    		echo "Execution du script de desinstallation"
    		cd $PATHPLUG/Admin
    	$PATHPLUG/Admin/desinstall
    	else
			echo "Pas de script a executer"
		fi
		#
		#Suppression d'entrée dans l'annuaire ldap
        #
        if [ -e $PATHPLUG/Admin/desinstall_ldap.ldif ]; then
    		echo "Suppression des entrees dans l'annuaire ldap"
    		#recuperation des parametres LDAP
			PARAMLDAP=(`mysql -se "select value from lcs_db.params  where name='ldap_server' or name='ldap_base_dn' or name='adminRdn' or name='adminPw'"`)
    		ldapmodify -x -c -h ${PARAMLDAP[0]} -D ${PARAMLDAP[2]},${PARAMLDAP[1]} -w ${PARAMLDAP[3]}  -f $PATHPLUG/Admin/desinstall_ldap.ldif
    	else
			echo "Pas d entrees LDAP a supprimer"
		fi
        
        #-----------------------------    
    	#Desinstallation de la base mysql
    	#-----------------------------
    
    	if [ -e $PATHPLUG/Admin/desinstall_mysql.sql ]; then
   			 echo "Desinstallation de la base MySQL"
   			 mysql < $PATHPLUG/Admin/desinstall_mysql.sql
    	else
			echo "Pas de base mysql a desinstaller"
		fi
		
        #
        # Suppression du repertoire
        #
        echo "Suppression du repertoire"
        if [ -e $PATHPLUG ]; then
        rm -rf $PATHPLUG
        fi
        
        cd $CHEMIN
        echo "Fin de la desinstallation"        
        ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)

    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
