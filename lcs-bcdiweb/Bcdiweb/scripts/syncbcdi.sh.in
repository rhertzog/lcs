#!/bin/bash
echo "Demarrage de la synchro des donn&#233;es... <BR>"
echo "Début de la dernière mise à jour : "`date` \<br\> > /usr/share/lcs/Plugins/Bcdiweb/synchro.log
rsync --recursive --times rsync://###IPBCDI###/bcdi /home/BcdiPlug/Data
if [ $? = 0  ]
 then
echo "Fin de la dernière mise à jour : "`date` >> /usr/share/lcs/Plugins/Bcdiweb/synchro.log
echo "Fin de la synchro des donn&#233;es<BR>"
 else
echo "Erreur dans la synchronisation des données" `date` >> /usr/share/lcs/Plugins/Bcdiweb/synchro.log
echo "Erreur dans la synchronisation des donn&#233;es<BR>"
fi
