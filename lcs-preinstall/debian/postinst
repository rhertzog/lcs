#! /bin/sh
# postinst script for lcs-preinstall
#
# see: dh_installdeb(1)

set -e
VERSIONLCS="2.4.7"
# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

exit_fatal() {
	echo "Fatal: $1" >&2
	exit 0
}

case "$1" in
    configure)
	#
	# only if first configuration
	#
	if [ "$2" = "" ]; then
	    . /usr/share/slis/slis-common.sh
	    handle_initial_config lcs-preinstall-config 55
        else
            if  mysqladmin --defaults-file=/etc/mysql/debian.cnf ping > /dev/null 2>&1 ; then
		# Update LCS Version param
                mysql -e "UPDATE lcs_db.params SET value='$VERSIONLCS' WHERE name='VER'"
                # Update for 2.4.6 version
		if dpkg --compare-versions $2 lt 2.4.6 ; then
                    # Create table redirmail for swekey strong auth
                    mysql -f < /var/lib/lcs/preinstall/lcs_db-table-redirmail.sql
		fi
                # Update for 2.4.7 version
		if dpkg --compare-versions $2 lt 2.4.7 ; then
                    # Modify statusages for new process statistic
                    if  ! mysqldump lcs_db statusages | grep -q login; then
                        mysql -e "ALTER TABLE lcs_db.statusages ADD login VARCHAR( 30 ) NOT NULL;"
                    fi
                    # Create table swekey in lcs_db
                    mysql -f < /var/lib/lcs/preinstall/lcs_db-table-swekey.sql
                    # Add param pwdPolicy in lcs_db.params
                    if  ! mysqldump lcs_db params | grep -q pwdPolicy; then
                        mysql -e "INSERT INTO lcs_db.params (id, name, value, srv_id, descr, cat) VALUES (NULL, 'pwdPolicy', '1', '0', 'Le mot de passe par défaut doit être changé', '1');"
		    fi
		    # Add ActiveDirectory parameters
                    if  ! mysqldump lcs_db params | grep -q ad_auth_delegation; then
                        mysql -f < /var/lib/lcs/preinstall/lcs_db-add-ad-params.sql
                    fi
                fi
            fi 
	fi
	#
	# SSH configuration
	#
	lcs-sshd-config
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


