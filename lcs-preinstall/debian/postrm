#! /bin/sh
# postrm script for lcs-preinstall
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
       purge|remove)
        #echo "Debug | Var_1 : $1"
        #
        # Suppression de la base de données lcs_db
        #
        mysql -e "DROP DATABASE IF EXISTS lcs_db;" > /dev/null 2>&1
        #
        # Suppression des entrées dans mysql db
        #
        mysql -e "DELETE FROM mysql.db WHERE Db = 'lcs_db';" > /dev/null 2>&1
        #
        # Suppression des entrées dans mysql user
        #        
        mysql -e "DELETE FROM mysql.user WHERE user = 'lcsmgr'"  > /dev/null 2>&1
        mysqladmin reload > /dev/null 2>&1
        if [ "$1" = "purge" ]; then
            rm -R /etc/lcs
            echo "Avant de réinstaller lcs-preinstall, vous devrez remettre en place le fichier de configuration LCS (/etc/lcs/lcs.conf)"
        fi
	#
	# Suppression de la configuration SSH LCS
	#
	# /usr/sbin/lcs-openssh-config
	if [ -e /etc/ssh/sshd_config.no-lcs ] ; then 
    		mv /etc/ssh/sshd_config.no-lcs /etc/ssh/sshd_config
	fi
	if [ -e /etc/issue.net.no-lcs ] ; then
    		mv /etc/issue.net.no-lcs /etc/issue.net
	fi
	
        ;;

        upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
