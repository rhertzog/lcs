#!/bin/sh
# postinst script for lcs-imap-ssl
#
# see: dh_installdeb(1)

set -e
MODULE="imap-ssl"
VER=$(dpkg-query -f '${Version}' -W lcs-$MODULE)
INDICEMAJNBR="0"
# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
   install| configure)
	if [ "$2" = "" ] || [ "$2" = "$VER" ]; then
		/usr/share/lcs/sbin/lcs-imap-ssl-config
		#
   	# Inscription du module dans applis.lcs_db
    	#
    	/usr/bin/mysql -e "INSERT INTO lcs_db.applis (id, name, value, descr, num_maj, version, chemin, type) VALUES ('', '$MODULE', '1', 'Courrier imap vi ssl', '$INDICEMAJNBR', '$VER', '', 'S');"
    else
    	echo "Mise ajour du paquet module LCS $MODULE de $2 vers $VER"
    	# mise a jour dans lcs_db.applis
    	TEST=`mysql -se "SELECT type FROM lcs_db.applis WHERE name='$MODULE';"`
    	if 	[ "$TEST" != "S" ]; then
    		/usr/bin/mysql -e "INSERT INTO lcs_db.applis (id, name, value, descr, num_maj, version, chemin, type) VALUES ('', '$MODULE', '1', 'Courrier imap vi ssl', '$INDICEMAJNBR', '$VER', '', 'S');"
    	else
    		/usr/bin/mysql -e "UPDATE lcs_db.applis SET num_maj='$INDICEMAJNBR', version='$VER' WHERE name='$MODULE';"
    	fi
    	if dpkg --compare-versions $2 lt 2.4.10 ; then
    		echo "Mise en place line symbolique vers ssl lcs certificat"
    		/usr/share/lcs/sbin/lcs-imap-ssl-config
    	fi
    	#
    	# Fin de la mise a jour
    	#
		echo "Termine."
    fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


