#! /bin/sh
# postinst script for LCS squirrelmail
set -e

case "$1" in
	install|configure)
           # only if first configuration
	   if [ "$2" = "" ]; then
	       . /usr/share/slis/slis-common.sh
	       handle_initial_config lcs-squirrelmail-config 95
	   fi
	   echo "Include /etc/squirrelmail/apache.conf" >/etc/apache2/lcs-main/60_squirrelmail.conf
    	;;

    	abort-upgrade|abort-remove|abort-deconfigure)
    	;;

    	*)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    	;;
esac

#DEBHELPER#

exit 0
