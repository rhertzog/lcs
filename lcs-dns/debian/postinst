#! /bin/sh
# postinst script for lcs-dns
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

function exit_fatal 
{
	echo "Fatal: $1" >&2
	exit 0
}

# lecture d'un parametre lcs dans lcs_db.params
function get_lcsdb_params
{
    PARAMS=`echo  "SELECT value FROM params WHERE name='$1'"| mysql lcs_db -N`
    echo "$PARAMS"
}

case "$1" in
    configure)
            #
            # only if first configuration
            #
            if [ "$2" = "" ] || ! lcs-test-mysql; then
                #
                # Read LCS params from /etc/lcs/lcs.conf
                #
                echo "get params from lcs.conf"
                [ ! -e /etc/lcs/lcs.conf ] && exit_fatal "missing /etc/lcs/lcs.conf"
                . /etc/lcs/lcs.conf
            else
                echo "get params from lcs_db.params"
                DNS_PRIMARY=$(get_lcsdb_params dns1)
                DNS_SECONDARY=$(get_lcsdb_params dns2)
                IPADDR0=$(get_lcsdb_params iplcs)
                HOSTNAME=$(get_lcsdb_params hostname)
                DOMAIN=$(get_lcsdb_params domain)
	    fi
            # dns_reconfigure.sh <DNS_PRIMARY> <DNS_SECONDARY> <IPADDR> <HOSTNAME> <DOMAIN>
            /usr/sbin/dns_reconfigure.sh $DNS_PRIMARY $DNS_SECONDARY $IPADDR0 $HOSTNAME $DOMAIN
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


