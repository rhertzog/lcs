#!/bin/sh
# postinst script for lcs-anti-spam
#
# see: dh_installdeb(1)

set -e
preversion=$2
MODULE="anti-spam"
VER=$(dpkg-query -f '${Version}' -W lcs-$MODULE)
INDICEMAJNBR="0"

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	if [ "$2" = "" ] || [ "$2" = "$VER" ]; then
### Install initiale
	/usr/share/lcs/sbin/anti-spam-config.sh
	if [ -x /usr/sbin/invoke-rc.d ]; then
                invoke-rc.d spamassassin restart
		invoke-rc.d postfix restart
        else
		/etc/init.d/spamassassin restart
		/etc/init.d/postfix restart
        fi
        #
        # Inscription du module dans applis.lcs_db
        #
        /usr/bin/mysql -e "INSERT INTO lcs_db.applis (id, name, value, descr, num_maj, version, chemin, type) VALUES ('', '$MODULE', '1', 'Ajout de fonction anti-spam au courrier', '$INDICEMAJNBR', '$VER', '', 'S');"
	else
### mise a jour de lcs-anti-spam
# mise a jour dans lcs_db.applis
  TEST=`mysql -se "SELECT type FROM lcs_db.applis WHERE name='$MODULE';"`
  if  [ "$TEST" != "S" ]; then
	/usr/bin/mysql -e "INSERT INTO lcs_db.applis (id, name, value, descr, num_maj, version, chemin, type) VALUES ('', '$MODULE', '1', 'Ajout de fonction anti-spam au courrier', '$INDICEMAJNBR', '$VER', '', 'S');"
   else
	/usr/bin/mysql -e "UPDATE lcs_db.applis SET num_maj='$INDICEMAJNBR', version='$VER' WHERE name='$MODULE';"
   fi
fi	

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


