#!/bin/sh
# postrm script for lcs-openvpn
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove)
	rm -rf /etc/lcs/openvpn/
	rm -rf /usr/share/lcs/openvpn/    
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 100 LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 101 LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 102 LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 103 LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 104 LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 105 LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 106 LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.id = 107 LIMIT 1;"
	chmod 700  /etc/sudoers
	sed -i'' '/^www-data ALL=NOPASSWD:GENVPNCLI/d' /etc/sudoers
	sed -i'' '/^Cmnd_Alias GENVPNCLI/d' /etc/sudoers
	chmod 440  /etc/sudoers
	;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


