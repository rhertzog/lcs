#!/bin/sh
# postrm script for lcs-openvpn
#
# see: dh_installdeb(1)

set -e
MODULE="openvpn"

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove)
	rm -rf /etc/lcs/openvpn/
	rm -rf /usr/share/lcs/openvpn/    
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnnet' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnnetmasq' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnport' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpncert' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpndh' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnvlan' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnconnexions' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnclienttoclient' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnmasquerade' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpnwins' LIMIT 1;"
	mysql -e "DELETE FROM lcs_db.params WHERE params.name = 'vpndnsclient' LIMIT 1;"
	chmod 700  /etc/sudoers
	sed -i'' '/^www-data ALL=NOPASSWD:GENVPNCLI/d' /etc/sudoers
	sed -i'' '/^Cmnd_Alias GENVPNCLI/d' /etc/sudoers
	chmod 440  /etc/sudoers
	#
    # Delete module in lcs_db.params
    #
    mysql -e "DELETE FROM lcs_db.applis WHERE name = '$MODULE';" > /dev/null 2>&1
    #
	# Remove include in named.conf
	#
	sed -i'' '/include "\/etc\/bind\/named.conf.vpn";/d' /etc/bind/named.conf
	if [ -x /usr/sbin/invoke-rc.d ]; then
	    invoke-rc.d bind9 restart
	else
	    /etc/init.d/bind9 restart
	fi
	### mise a jour sudoers
	 /usr/sbin/lcs-make-sudoers
	;;

	upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


